<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">@dimen/button_choice_width</item>
        <item name="android:textSize">@dimen/button_choice_text_size</item>
        <item name="android:textColor">@color/button_choice_text_color</item>
        <item name="android:layout_height">@dimen/button_choice_height</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>