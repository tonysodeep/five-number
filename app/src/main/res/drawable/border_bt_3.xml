<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/border_background_buttons" />
            <stroke android:width="@dimen/button_choice_border" android:color="@color/border_button_3" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/border_button_3" />
            <stroke android:width="@dimen/button_choice_border" android:color="@color/border_button_3" />
        </shape>
    </item>
</selector>